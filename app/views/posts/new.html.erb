<H1>
    Submit an anonymous post!
</H1>

<%= form_with model: @post do |form| %>
    <%= form.label "Title" %><br>
    <%= form.text_field :title, placeholder: 'Your Post Title Here' %><br>
    <%= form.label "Post Body:" %><br>
    <%= form.textarea :body, size: "70x5", placeholder: 'Write your post here' %><br>
    <%= form.label "Image URL" %>
    <%= form.text_field :image_url %><br>
    <%= form.submit value:"Submit" %>
<% end %>